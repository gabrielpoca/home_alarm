	  >
	  </path>
	  <path
	    d="M0 0h284v123H0V0z"
	    class="place"
	    fill-opacity="0"
	    fill="#FD199B"
	    id="kitchen-line"
	    stroke-opacity="0"
	    stroke-width="6"
	    stroke="#FD199B"
	    transform="translate(206 191)"
	  >
	  </path>
	  <path
	    id="bedroom-line"
	    class="place"
	    fill-opacity="0"
	    stroke-opacity="0"
	    stroke-width="6"
	    stroke="#FD199B"
	    fill="#FD199B"
	    transform="translate(106 328)"
	    d="M380 0H0v92h148v115h236V0z"
	  >
	  </path>
	  <path
	    d="M0 0h187v123H0V0z"
	    class="place"
	    fill-opacity="0"
	    stroke-opacity="0"
	    stroke-width="6"
	    stroke="#FD199B"
	    id="hall-line"
	    transform="translate(3 191)"
	  >
	  </path>
	  <path
	    d="M0 0h88v171H0V0z"
	    class="place"
	    fill="#FD199B"
