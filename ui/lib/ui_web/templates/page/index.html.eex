      </svg>
    </div>
    <div class="interactive-map__actions">
      <%= form_for @conn, sleep_path(@conn, :create), [as: :sleep], fn f -> %>
	<%= hidden_input f, :hours, [value: 1] %>
	<%= submit "Sleep for 1 hour", [class: "button mb-2"] %>
      <% end %>

      <%= form_for @conn, sleep_path(@conn, :create), [as: :sleep], fn f -> %>
	<%= hidden_input f, :hours, [value: 4] %>
	<%= submit "Sleep for 4 hours", [class: "button"] %>
      <% end %>
    </div>
  </div>
</div>
