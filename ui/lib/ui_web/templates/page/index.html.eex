	  <path id="path0_fill" d="M0 0h389v177H0V0z"/>
	  <path id="path1_fill" d="M0 0h290v129H0V0z"/>
	  <path id="path2_fill" fill-rule="evenodd" d="M390 0H0v98h154v115h236V0z"/>
	  <path id="path3_fill" d="M0 0h193v129H0V0z"/>
	  <path id="path4_fill" d="M0 0h94v177H0V0z"/>
