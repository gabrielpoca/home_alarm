<div class="container">
  <h1 class="h1">Alarm Backdoor</h1>

  <div class="interactive-map">
    <div class="interactive-map__plant">
      <svg id="plant" xmlns="http://www.w3.org/2000/svg" width="568" height="538" viewBox="0 0 568 538" xmlns:xlink="http://www.w3.org/1999/xlink">
	<desc>
	  Created using Figma
	</desc>
	<g id="Canvas">
	  <use
	    id="livingroom"
	    fill="#30302F"
	    xlink:href="#path0_fill"
	    transform="translate(103)"
	  />
	  <use
	    id="kitchen"
	    fill="#30302F"
	    xlink:href="#path1_fill"
	    transform="translate(203 187)"
	  />
	  <use
	    id="bedroom"
	    fill="#30302F"
	    xlink:href="#path2_fill"
	    transform="translate(103 325)"
	  />
	  <use
	    id="hall"
	    fill="#30302F"
	    xlink:href="#path3_fill"
	    transform="translate(0 188)"
	  />
	  <use
	    id="bathroom"
	    fill="#30302F"
	    xlink:href="#path4_fill"
	  />
	  <use
	    id="balcony"
	    fill="#30302F"
	    xlink:href="#path5_fill"
	    transform="translate(500 8)"
	  />
	  <path
	    d="M0 0h384v171H0V0z"
	    id="livingroom-line"
	    class="place"
	    fill-opacity="0"
	    stroke="#FD199B"
	    stroke-opacity="0"
